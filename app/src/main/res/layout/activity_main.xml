<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用Scroller实现的效果"
            android:textSize="20sp"
            />

        <com.samay.upmarqueeview.UpMarqueeViewByScroller
            android:id="@+id/upmarqueeview"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/title_tv1"/>

        <TextView
            android:id="@+id/title_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用View Flipper实现的效果"
            android:textSize="20sp"
            android:layout_below="@id/upmarqueeview"/>

        <com.samay.upmarqueeview.UpMarqueeViewByViewFlipper
            android:id="@+id/upmarqueeviewbyflipper"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/upmarqueeview"
            android:layout_marginTop="30dp" />

    </RelativeLayout>
</LinearLayout>